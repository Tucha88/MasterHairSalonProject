<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/linear_layout_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7bffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/account_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/client_input_foto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_photo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/client_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Name"
                    android:textColor="#000"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/client_last_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Last Name"
                    android:textColor="#000"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/client_phone_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Phone number"
                    android:textColor="#000"
                    android:textSize="30sp" />


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/client_address_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Address"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="List of records"
            android:textColor="#000"
            android:textSize="25sp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/client_calendar_container"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_margin="10dp">

            </ListView>

        </ScrollView>


    </LinearLayout>

    <Button
        android:id="@+id/find_master_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Find master"
        android:textAllCaps="false"
        android:textSize="20sp" />

</RelativeLayout>