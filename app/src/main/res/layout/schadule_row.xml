<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/day_of_week_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="day of week"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/start_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="star hour" />

    <TextView
        android:id="@+id/start_min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="start min" />

    <TextView
        android:id="@+id/end_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="end hour"
        />

    <TextView
        android:id="@+id/end_min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="end min" />

    <CheckBox
        android:id="@+id/template_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>